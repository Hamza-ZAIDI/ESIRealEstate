<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".post_details.PostDetails">
        <FrameLayout
                android:id="@+id/fragment_image_slider"
                android:layout_width="match_parent"
                android:layout_height="@dimen/real_estate_picture_height"/>
        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <FrameLayout
                                android:id="@+id/fragment_post_description_container"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        <FrameLayout
                                android:id="@+id/fragment_contact_container"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                </LinearLayout>
        </ScrollView>

</LinearLayout>